<form autocomplete="off">
    <ul style="padding: 0; list-style-type:none;">
        {{#each tokenfaces}}
        <li id="{{this.id}}">
        
        <div class="form-group">
        <label>{{localize "tokenflip.config.formapp.faceId"}}</label>
        <input type="text" name="faceId" placeholder="Face ID" value="{{this.id}}" disabled>
        </div>


        <div class="form-group">
            <label>{{localize "TOKEN.ImagePath"}}</label>
            <div class="form-fields">
                <button type="button" class="file-picker" data-type="imagevideo" data-target="{{this.id}}" title="Browse Files"
                    tabindex="-1">
                    <i class="fas fa-file-import fa-fw"></i>
                </button>
                <input class="image" type="text" name="{{this.id}}" placeholder="File Path" value="{{this.img}}">
                <button type="button" class="delete" data-id="{{this.id}}" title="Browse Files">
                    <i class="fas fa-trash"></i>
                </button>
            </div>
        </div>

        <div class="form-group">
        <label>{{localize "tokenflip.config.formapp.model3d"}}</label>
        <input class="image" type="text" name="model3d" placeholder="File Path" value="{{this.model3d}}">
        {{filePicker type="graphics" target="model3d"}}
        </div>

        <div class="form-group">
            <label id="actlabel">{{localize "TOKEN.CharActor"}}</label>
            <select name="actor" data-dtype="String">
                {{#select this.actorId}}
                {{#each ../actorsarray}}
                <option value="{{this.id}}" >{{this.name}}</option>
                {{/each}}
                {{/select}}
            </select>
        </div>


        <div class="form-group slim">
            <label>{{localize "TOKEN.Dimensions"}}<span class="units">({{localize "GridSpaces"}})</span></label>
            <div class="form-fields">
                <label>{{localize "Width"}}</label>
                <input type="number" value="{{this.width}}" step="any" name="width" placeholder="spaces">
                <label>{{localize "Height"}}</label>
                <input type="number" value="{{this.height}}" step="any" name="height" placeholder="spaces">
            </div>
        </div>

        <div class="form-group">
            <label>{{localize "Scale"}} X <span class="units">({{localize "Ratio"}})</span></label>
            <div class="form-fields">
                <input type="range" name="scaleX" value="{{this.scaleX}}" min="-3.0" max="3.0" step="0.1">
                <span class="range-value">{{this.scaleX}}</span>
            </div>
        </div>
        <div class="form-group">
            <label>{{localize "Scale"}} Y <span class="units">({{localize "Ratio"}})</span></label>
            <div class="form-fields">
                <input type="range" name="scaleY" value="{{this.scaleY}}" min="-3.0" max="3.0" step="0.1">
                <span class="range-value">{{this.scaleY}}</span>
            </div>
        </div>
        <hr>
        </li>
        {{/each}}
    </ul>
    <button id="add"><i class="fas fa-plus"></i> {{localize "tokenflip.config.formapp.add"}}</button>
</form>

